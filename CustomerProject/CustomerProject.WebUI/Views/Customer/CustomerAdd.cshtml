@model CustomerModel

<h1>Müşteri Ekle</h1>

<form method="post" asp-controller="Customer" asp-action="CustomerAdd">
	<div class="row">
		<div class="col-md-8">
			<div class="text-danger" asp-validation-summary="All"></div>
			<div class="row mb-3">
				<label asp-for="Name" class="col-sm-2 col-form-label">Müşteri Adı</label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="Name">
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="Surname" class="col-sm-2 col-form-label">Müşteri Soyadı</label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="Surname">
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="TC" class="col-sm-2 col-form-label">Müşteri TC</label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="TC">
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="BirthPlace" class="col-sm-2 col-form-label">Müşteri Doğum Yeri</label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="BirthPlace">
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="BirthYear" class="col-sm-2 col-form-label">Müşteri Doğum Yılı</label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="BirthYear">
				</div>
			</div>

			<button type="submit" class="btn btn-primary w-25">Ekle</button>

		</div>
	</div>
</form>

@section Scripts{
	<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}