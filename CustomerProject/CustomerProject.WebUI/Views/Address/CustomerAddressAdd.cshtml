@model AddressInfoModel

<h1>Adres Ekle</h1>

<form method="post" asp-controller="Address" asp-action="CustomerAddressAdd">
	<div class="row">
		<div class="col-md-8">
			<div class="text-danger" asp-validation-summary="All"></div>

			<input type="hidden" asp-for="CustomerId" value="@Model.CustomerId"/>

			<div class="row mb-3">
				<label asp-for="AddressType" class="col-sm-2 col-form-label">Adres Tipi</label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="AddressType">
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="Country" class="col-sm-2 col-form-label">Ülke</label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="Country">
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="City" class="col-sm-2 col-form-label">Şehir</label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="City">
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="District" class="col-sm-2 col-form-label">İlçe</label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="District">
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="DetailedAddress" class="col-sm-2 col-form-label">Açık Adres</label>
				<div class="col-sm-10">
					<textarea class="form-control" asp-for="DetailedAddress"></textarea>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="PostCode" class="col-sm-2 col-form-label">Posta Kodu</label>
				<div class="col-sm-10">
					<input class="form-control" asp-for="PostCode">
				</div>
			</div>

			<button type="submit" class="btn btn-primary w-25">Ekle</button>

		</div>
	</div>
</form>

@section Scripts{
	<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}